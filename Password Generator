#!/bin/python3

import random

#De tekens beschikbaar
chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890!@#$%^&*()-_=+[{]}\|;:/?.>,<'

#Vraagt voor een input voor de wachtwoordlengte
length = input('Password length: ')
#Maakt eeen integer van de ingevoerde lengte
length = int(length)

#Vraagt voor een input voor de wachtwoordvariaties
amount = input('Amount of password variations: ')
#Maakt eeen integer van de ingevoerde variaties
amount = int(amount)

for p in range(amount):
  password = ''
  for c in range(length):
    password += random.choice(chars)
  print(password)
